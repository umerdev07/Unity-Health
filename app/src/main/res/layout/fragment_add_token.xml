<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Token"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#000"
            android:paddingBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patient Username"
            android:textColor="#444"
            android:textSize="16sp" />

        <AutoCompleteTextView
            android:id="@+id/actv_patient_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:hint="Search patient"
            android:elevation="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Token Number"
            android:textColor="#444"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/et_token_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:hint="Enter token number"
            android:elevation="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="#444"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/et_date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:hint="DD/MM/YYYY"
            android:elevation="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textColor="#444"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/et_time"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:hint="HH:MM AM/PM"
            android:elevation="2dp" />

        <Button
            android:id="@+id/btn_submit_token"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:text="Submit Token"
            android:textColor="#fff"
            android:textSize="18sp"
            android:background="#4CAF50" />
    </LinearLayout>
</ScrollView>
