<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@android:color/white"
    android:elevation="3dp"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="8dp">

    <TextView android:id="@+id/pharmacy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pharmacy Name"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView android:id="@+id/pharmacy_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact:"
        android:textSize="14sp" />

    <TextView android:id="@+id/pharmacy_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:textSize="14sp" />

    <TextView android:id="@+id/pharmacy_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open:"
        android:textSize="14sp" />

    <TextView android:id="@+id/pharmacy_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Delivery:"
        android:textSize="14sp"
        android:textStyle="italic" />

    <TextView android:id="@+id/pharmacy_medicines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medicines:"
        android:textSize="14sp" />
</LinearLayout>
